
@{
    ViewBag.Title = "Dice Game";
}
@section AddToHead{
    <link href="@Url.Content("~/Styles/dice.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/dice.js")"></script>
}

<h2>Dice Game</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="dice-wrapper">
                        <div id="platform1" class="dice-platform">
                            <div id="dice1" class="dice">
                                <div class="side front">
                                    <div class="dot center"></div>
                                </div>
